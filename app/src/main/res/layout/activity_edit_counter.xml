<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp">



    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80px"/>


    <TextView
        android:id="@+id/counterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80px"
        android:layout_below="@+id/nameText" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/counterText"
        android:text="plus+1"/>


    <Button
        android:id="@+id/minusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minus-1"
        android:layout_alignBaseline="@+id/plusButton"
        android:layout_alignBottom="@+id/plusButton"
        android:layout_toRightOf="@+id/furtherEdit"
        android:layout_toEndOf="@+id/furtherEdit" />


    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_below="@+id/plusButton"
        android:layout_alignRight="@+id/back"
        android:layout_alignEnd="@+id/back"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />


    <TextView
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetButton"
        android:textSize="80px" />



    <Button
        android:id="@+id/furtherEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit More"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/commentText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:layout_alignBaseline="@+id/furtherEdit"
        android:layout_alignBottom="@+id/furtherEdit"
        android:layout_toRightOf="@+id/furtherEdit"
        android:layout_toEndOf="@+id/furtherEdit"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_below="@+id/furtherEdit"
        android:layout_alignRight="@+id/delete"
        android:layout_alignEnd="@+id/delete"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp" />

</RelativeLayout>